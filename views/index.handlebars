<h1>Eat-the-Burger!</h1>

<div class="container">
    <div class = "row text-center">
        <div class = "col-6">
            <ul>
                {{#each burgers}}
                    {{#unless this.devoured}}
                        <li>
                            {{this.id}}. {{this.burger_name}}
                            <button class="devour-it" data-id="{{this.id}}">Devour it!</button>
                        </li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class = "col-6">
            <ul>
                {{#each burgers}}
                    {{#if this.devoured}}
                        <li>
                            {{this.id}}. {{this.burger_name}}
                        </li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>

<form class="create-form">

  <div class="form-group">
    <label for="burger">Enter name of the burger you want to eat:</label>
    <input type="text" id="burger" name="name">
  </div>

  <button type="submit">Submit</button>
</form>
